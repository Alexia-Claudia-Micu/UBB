<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <ImageView
        android:id="@+id/plant_picture"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:contentDescription="Plant Picture"
        android:src="@drawable/default_image" />

    <EditText
        android:id="@+id/plant_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Type" />

    <EditText
        android:id="@+id/plant_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Location" />

    <EditText
        android:id="@+id/plant_treatment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Treatment" />

    <EditText
        android:id="@+id/plant_notes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Notes" />

    <EditText
        android:id="@+id/plant_mother"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mother Plant" />

    <EditText
        android:id="@+id/plant_propagations"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Propagations (comma-separated)" />

    <Button
        android:id="@+id/btn_save_plant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save Plant"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp" />

</LinearLayout>
